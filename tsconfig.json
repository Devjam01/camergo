/* Ce fichier tsconfig.json configure TypeScript pour un projet spécifique, 
définissant les options de compilation, les chemins d'importation personnalisés, 
et les fichiers à inclure ou à exclure lors de la compilation. Ces configurations visent à 
optimiser le flux de travail de développement et à garantir une vérification rigoureuse des types 
dans le projet TypeScript, tout en intégrant des spécificités liées à l'utilisation de Next.js et d'autres outils du développement web moderne.*/

{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
